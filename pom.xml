<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
        <modelVersion>4.0.0</modelVersion>
        <groupId>org.orbisgis</groupId>
        <artifactId>orbisgis</artifactId>
        <packaging>pom</packaging>
        <version>5.0.1-SNAPSHOT</version>
        <name>platform</name>
        <description>Main Orbisgis project</description>
        <organization>
                <name>IRSTV CNRS-FR-2488</name>
                <url>http://www.irstv.fr/</url>
        </organization>
        <url>http://www.orbisgis.org</url>
        <parent>
                <groupId>org.orbisgis</groupId>
                <artifactId>orbisgis-nexus</artifactId>
                <version>1</version>
        </parent>
        <modules>
                <module>bundles/postgis-jts-osgi</module>
                <module>bundles/h2trigger</module>
                <module>bundles/core-jdbc</module>
                <module>bundles/h2trigger-osgi</module>
                <module>bundles/core-map</module>
                <module>bundles/core-export</module>
                <module>wms-client</module>
                <module>api/orbisgis-core</module>
                <module>orbisgis-core</module>
                <module>orbisgis-sif</module>
                <module>api/orbisgis-view</module>
                <module>bundles/sql-parser-api</module>
                <module>bundles/sqlconsole-parser</module>
                <module>bundles/orbisgis-oshell</module>
                <module>bundles/orbisgis-omanager</module>
                <module>bundles/orbisgis-omanager-plugin</module>
                <module>bundles/map-editor-api</module>
                <module>orbisgis-view</module>
                <module>bundles/map-editor</module>
                <module>legend</module>
                <module>bundles/toc</module>
        </modules>
        <profiles>
            <profile>
                <id>osgi</id>
                <modules>
                    <module>integration-test</module>
                </modules>
            </profile>
            <profile>
                <id>default</id>
                <activation>
                    <activeByDefault>true</activeByDefault>
                </activation>
                <modules>
                    <module>orbisgis-dist</module>
                </modules>
            </profile>
            <profile>
                <id>no-dist</id>
            </profile>
        </profiles>
        <properties>
                <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
                <netbeans.hint.license>OrbisGIS</netbeans.hint.license>
                <default-main-class>org.orbisgis.view.main.Main</default-main-class>
                <!-- Common Dependencies version -->
                <log4j-version>1.2.16</log4j-version>
                <commons-io-version>1.3.2</commons-io-version>
                <jts-version>1.13</jts-version>
                <org.osgi.compendium-version>4.3.1</org.osgi.compendium-version>
                <h2-version>1.4.185</h2-version>
                <h2-package>com.h2database</h2-package>
                <h2-gis-version>1.2.0</h2-gis-version>
                <sl4j-version>1.6.0</sl4j-version>
                <rsyntax-version>2.0.7</rsyntax-version>
                <rsyntax-ls-version>r795</rsyntax-ls-version>
                <rsyntax-autocomplete-version>2.0.7</rsyntax-autocomplete-version>
                <gettext-commons-version>0.9.8</gettext-commons-version>
                <cts-version>1.3.3</cts-version>
                <org.osgi.service.obr-version>1.0.2</org.osgi.service.obr-version>
                <org.orbisgis.commons-version>1.4.2</org.orbisgis.commons-version>
                <ogc-commons-version>1.2</ogc-commons-version>
        </properties>
        <scm>
                <connection>scm:git:https://github.com/irstv/orbisgis.git</connection>
                <url>https://github.com/irstv/orbisgis</url>
        </scm>
        <build>
                <plugins>
                        <plugin>
                                <artifactId>maven-compiler-plugin</artifactId>
                                <version>2.3.2</version>
                                <configuration>
                                        <source>1.7</source>
                                        <target>1.7</target>
                                </configuration>
                        </plugin>
                        <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-jar-plugin</artifactId>
                                <version>2.4</version>
                                <configuration>
                                        <archive>
                                                <manifest>
                                                        <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                                </manifest>
                                                <manifestEntries>
                                                        <Specification-Vendor-URL>${project.organization.url}</Specification-Vendor-URL>
                                                        <Specification-URL>${project.url}</Specification-URL>
                                                </manifestEntries>
                                        </archive>
                                </configuration>
                        </plugin>
                </plugins>
        </build>
</project>
